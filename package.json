{
    "name": "amc-platform-b2c",
    "private": true,
    "workspaces": [
      "apps/*",
      "packages/*"
    ],
    "scripts": {
      "dev": "npm run dev --workspace=platform-shell",
      "dev:analyzer": "npm run dev --workspace=cross-analyzer-gcp",
      "build": "npm run build --workspaces --if-present",
      "deploy": "npm run build && firebase deploy",
      "deploy:shell": "npm run build --workspace=platform-shell && firebase deploy --only hosting:platform-shell",
      "deploy:analyzer": "npm run build --workspace=cross-analyzer-gcp && firebase deploy --only hosting:cross-analyzer-gcp,functions:cross-analyzer-gcp"
    },
    "devDependencies": {
      "firebase-tools": "^13.11.0"
    }
  }