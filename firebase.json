{
    "hosting": [
      {
        "target": "platform-shell",
        "public": "apps/platform-shell/build",
        "ignore": [
          "firebase.json",
          "**/.*",
          "**/node_modules/**"
        ],
        "rewrites": [
          {
            "source": "**",
            "destination": "/index.html"
          }
        ]
      },
      {
        "target": "cross-analyzer-gcp",
        "public": "apps/cross-analyzer-gcp/build",
        "ignore": [
          "firebase.json",
          "**/.*",
          "**/node_modules/**"
        ],
        "rewrites": [
          {
            "source": "**",
            "destination": "/index.html"
          }
        ]
      }
    ],
    "functions": [
      {
        "source": "apps/cross-analyzer-gcp/functions",
        "codebase": "cross-analyzer-gcp",
        "runtime": "nodejs18"
      }

    ],
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "storage": {
      "rules": "storage.rules"
    }
  }